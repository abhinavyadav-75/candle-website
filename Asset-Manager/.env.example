# Server
SESSION_SECRET=your-session-secret
PORT=5000

# Database (preferred: DATABASE_URL)
DATABASE_URL=postgresql://user:password@host:5432/dbname
# or individual params:
PGHOST=localhost
PGUSER=postgres
PGPASSWORD=secret
PGDATABASE=dbname
PGPORT=5432
PGSSLMODE=disable
DATABASE_SSL=false

# Payment (Razorpay)
RAZORPAY_KEY_ID=
RAZORPAY_KEY_SECRET=

# AI Integrations
AI_INTEGRATIONS_OPENAI_API_KEY=
AI_INTEGRATIONS_OPENAI_BASE_URL=

# Object storage (required for uploads)
PUBLIC_OBJECT_SEARCH_PATHS=public-bucket/path1,public-bucket/path2
PRIVATE_OBJECT_DIR=private-bucket/path

# Replit/connectors (optional, used for email/resend integration)
REPLIT_CONNECTORS_HOSTNAME=
REPL_IDENTITY=
WEB_REPL_RENEWAL=

# Google Cloud credentials (if using GCS)
# Either set GOOGLE_APPLICATION_CREDENTIALS to a service account JSON path
# or configure ADC in your environment.
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json
